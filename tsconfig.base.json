      "@my-test/shared/tdd/utils": ["libs/shared/tdd/utils/src/index.ts"],
      "@my-test/testv15/catfact/data-access": [
        "libs/testv15/catfact/data-access/src/index.ts"
      ],
      "@my-test/testv15/catfact/feature": [
        "libs/testv15/catfact/feature/src/index.ts"
      ],
      "@my-test/testv15/json-placeholder/data-access": [
        "libs/testv15/json-placeholder/data-access/src/index.ts"
      ],
      "@my-test/testv15/json-placeholder/feature": [
        "libs/testv15/json-placeholder/feature/src/index.ts"
      ],
      "@my-test/testv15/shell": ["libs/testv15/shell/src/index.ts"],
      "@my-test/testv15/spectator/feature": [
        "libs/testv15/spectator/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
